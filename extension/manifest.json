{
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hi_icon.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources": [{
    "resources": ["iframe.html", "hello.html"],
    "matches": ["<all_urls>"]
  }],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://discord.com/*"
  ]
}